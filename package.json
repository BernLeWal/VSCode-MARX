{
  "name": "marx",
  "displayName": "Markdown Explorer (MARX)",
  "description": "",
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "marx.hello",
        "title": "Hello MARX"
      },
      {
        "command": "marx.showTime",
        "title": "Show current Date/Time"
      },
      {
        "command": "marxExplorer.refresh",
        "title": "Refresh",
        "shortTitle": "ðŸ”„"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "marxViewContainer",
          "title": "MARX",
          "icon": "resources/marx-icon.png"
        }
      ]
    },
    "views": {
      "marxViewContainer": [
        {
          "id": "marxExplorer",
          "name": "Markdown Explorer"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "marxExplorer.refresh",
          "group": "navigation",
          "when": "view == marxExplorer"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
